<%= turbo_frame_tag :projects do %>
<div data-controller="gradient-maker" data-gradient-maker-target="background" class="h-100">
  <!-- color wheel -->
  <div class="d-flex flex-column align-items-center justify-content-between border rounded-2 position-absolute  py-1 pxw-200 pxh-200 bg-dark-blue-a d-none" data-gradient-maker-target="color_wheel_container">
    <div class="d-flex flex-column gap-2 align-items-center">
      <div class="d-flex gap-4 align-items-center">
        <p class="mx-4 text-white"></p>
        <p class="pt-1 text-white m-0" data-gradient-maker-target="color_wheel_label">######</p>
        <button class="pxh-20 pxw-50 bg-danger rounded-pill center-text text-white border-0 " data-action="click->gradient-maker#remove_color click->gradient-maker#display_gradient"><span>del</span></button>
      </div>
      <input class="pxw-180" type="color" data-gradient-maker-target="color_input"/>
      <input class="pxw-180" type="range" min="1" max="360" data-gradient-maker-target="range_input" data-action="click->gradient-maker#displayDeg"/>
      <p class="text-white" data-gradient-maker-target="deg_display">180deg</p>
    </div>
    <button class="rounded-pill border-0 bg-success" data-action="click->gradient-maker#Pick_color_val click->gradient-maker#display_gradient">enter</button>
  </div>
  <!-- end color wheel -->


  <!-- color container -->
  <div class="container bg-dark-blue-a rounded-2 border py-4 lg-vw-45 md-vw-65 position-relative t-45"  >
      <div class="row px-5 overflow-y max-pxh-90" data-gradient-maker-target="colors">
        <!--colors gened here-->

      </div>
      <button class="col-1 rounded-pill pxw-100 pxh-40 center-text p-0 border-0 position-absolute" data-action="click->gradient-maker#add_color"><span>add color</span></button>

    <div class="mx-auto bg-white border px-1 py-2 w-50 overflow-y max-pxh-60" data-gradient-maker-target="color_css">
      text
    </div>

  </div>
  <!-- end color container -->


</div>
<% end %>
